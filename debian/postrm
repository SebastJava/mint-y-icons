#!/bin/sh
set -e

# The auto-generated postrm did not update-icon-caches on most "-Dark" variants.
# This caused some directories to be not empty and thus not deleted.
# And this caused some warning messages when doing GDebi updates.

if which update-icon-caches >/dev/null 2>&1 ; then
    update-icon-caches /usr/share/icons/Mint-Yz-AquaShine /usr/share/icons/Mint-Yz-AquaShine-Dark /usr/share/icons/Mint-Yz-BlueBelize /usr/share/icons/Mint-Yz-BlueBelize-Dark /usr/share/icons/Mint-Yz-BlueElectron /usr/share/icons/Mint-Yz-BlueElectron-Dark /usr/share/icons/Mint-Yz-Classic /usr/share/icons/Mint-Yz-Classic-Dark /usr/share/icons/Mint-Yz-Grey /usr/share/icons/Mint-Yz-Grey-Dark /usr/share/icons/Mint-Yz-MintLeaf /usr/share/icons/Mint-Yz-MintLeaf-Dark
    update-icon-caches /usr/share/icons/Mint-Yz-MintSoda /usr/share/icons/Mint-Yz-MintSoda-Dark /usr/share/icons/Mint-Yz-OrangeShine /usr/share/icons/Mint-Yz-OrangeShine-Dark /usr/share/icons/Mint-Yz-Pink /usr/share/icons/Mint-Yz-Pink-Dark /usr/share/icons/Mint-Yz-Purple /usr/share/icons/Mint-Yz-Purple-Dark /usr/share/icons/Mint-Yz-RedShine /usr/share/icons/Mint-Yz-RedShine-Dark /usr/share/icons/Mint-Yz-Yellow /usr/share/icons/Mint-Yz-Yellow-Dark
fi
