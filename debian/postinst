if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
    if which update-icon-caches >/dev/null 2>&1 ; then
        update-icon-caches /usr/share/icons/Mint-Yz-Aqua /usr/share/icons/Mint-Yz-Aqua-Dark /usr/share/icons/Mint-Yz-Blue /usr/share/icons/Mint-Yz-Blue-Dark /usr/share/icons/Mint-Yz-BlueDeep /usr/share/icons/Mint-Yz-BlueDeep-Dark /usr/share/icons/Mint-Yz-Grey /usr/share/icons/Mint-Yz-Grey-Dark /usr/share/icons/Mint-Yz-MintSoda /usr/share/icons/Mint-Yz-MintSoft /usr/share/icons/Mint-Yz-MintSoft-Dark /usr/share/icons/Mint-Yz-MintSoda-Dark /usr/share/icons/Mint-Yz-Old /usr/share/icons/Mint-Yz-Old-Dark
        update-icon-caches /usr/share/icons/Mint-Yz-Orange /usr/share/icons/Mint-Yz-Orange-Dark /usr/share/icons/Mint-Yz-Pink /usr/share/icons/Mint-Yz-Pink-Dark /usr/share/icons/Mint-Yz-Purple /usr/share/icons/Mint-Yz-Purple-Dark /usr/share/icons/Mint-Yz-PurpleDeep /usr/share/icons/Mint-Yz-PurpleDeep-Dark /usr/share/icons/Mint-Yz-Red /usr/share/icons/Mint-Yz-Red-Dark /usr/share/icons/Mint-Yz-Yellow /usr/share/icons/Mint-Yz-Yellow-Dark
    fi
fi

